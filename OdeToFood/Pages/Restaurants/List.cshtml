@page
@model OdeToFood.Pages.ListModel
@{
}

<h1>Restaurants</h1>
<form method="get">
    <div class="input-group">
        <input type="search" class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-info">Search</button>
        </div>
    </div>
</form>
<div>
    <table class="table">
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.Cuisine</td>
                <td>
                    <a asp-route-restaurantID="@restaurant.Id" asp-page="/Restaurants/Details" class="btn btn-outline-secondary">
                        Details
                    </a>
                </td>
                <td>
                    <a asp-route-restaurantID="@restaurant.Id" asp-page="/Restaurants/Edit" class="btn btn-outline-info">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
